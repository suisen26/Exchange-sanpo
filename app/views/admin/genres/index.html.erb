<div class="container py-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">

      <h2 class="text-center mb-3">ジャンル登録</h2>
      <%= form_with model: @genre, url: admin_genres_path(@genre), method: :post do |f| %>

        <div class="form-group">
          <div class="row justify-content-center">
            <div class="col-md-8 mb-3">
              <%= f.label :name, "ジャンル名", class: "m-lg-0" %>
              <%= f.text_field :name, placeholder: "ジャンル名", autofocus: true, class: "form-control" %>
              <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
            </div>
          </div>
        </div>
      <% end %>

      <h2 class="text-center mb-3">ジャンル一覧</h2>
      <table class="table">
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary btn-block" %></td>
            <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger btn-block" %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
