<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">

      <h2 class="text-center mb-3">ジャンル登録</h2>
      <%= form_with model: @genre, url: admin_genres_path(@genre), method: :post do |f| %>
        <div class="form-group">
          <div class="row justify-content-center">
            <div class="col-md-8 text-center mb-3">
              <%= f.label :name, "ジャンル名" %>
              <%= f.text_field :name, placeholder: "ジャンル名", autofocus: true, class: "form-control mb-3" %>
              <%= f.submit "新規登録", class: "btn btn-success px-5" %>
            </div>
          </div>
        </div>
      <% end %>

      <h2 class="text-center mb-3">ジャンル一覧</h2>
      <table class="table col-md-8 mx-auto">
        <% @genres.each do |genre| %>
          <tr>
            <td class="genre-index"><%= genre.name %></td>
            <td class="genre-index"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-primary" %></td>
            <td class="genre-index"><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
