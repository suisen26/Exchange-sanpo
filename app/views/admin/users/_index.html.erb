<table class="table">
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to admin_user_path(user) do %>
          <%= image_tag user.get_profile_image(100, 100) %></br>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_user_path(user) do %>
          <%= user.introduction %>
        <% end %>
      </td>
      <% if user.name != "ゲストユーザー" %>
        <tr>
          <th>フォロー</th>
          <th><%= link_to user.followings.count, admin_user_followings_path(user) %></th>
        </tr>
        <tr>
          <th>フォロワー</th>
          <th><%= link_to user.followers.count, admin_user_followers_path(user) %></th>
        </tr>
      <% end %>
    </tr>
    
  <% end %>
</table>
      