<div class="container py-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      
      <h2 class="text-center mb-3">ユーザー一覧</h2>
      <table class="table">
        <% @users.each do |user| %>
          <%= link_to(user) do %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100, 100) %></br>
                <%= user.name %>
              </td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
      
    </div>
  </div>
</div>
