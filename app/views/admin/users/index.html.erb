<div class="container py-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      
      <h2 class="text-center mb-3">ユーザー一覧</h2>
      <% @users.each do |user| %>
        <%= link_to admin_user_path(user) do %>
          <div class="row">
            <div class="col-md-3">
              <%= image_tag user.get_profile_image(100, 100) %></br>
              <%= user.name %>
            </div>
            <div class="col-md-8">
              <%= user.introduction %>
            </div>
          </div>
        <% end %>
      <% end %>
      
    </div>
  </div>
</div>
