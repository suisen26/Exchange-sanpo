<div class="row">
  <% posts.each do |post| %>
    <div class="col-md-4 card card-rounded">
      <%= link_to admin_post_path(post.id) do %>
        <%= image_tag post.get_post_image(200, 200), class: "post_image_rounded" %></br>
        <%= post.text %></br>
        投稿日:<%= post.created_at.strftime("%Y/%m/%d") %></br>
      <% end %>

      <%= link_to admin_user_path(post.user.id) do %>
        <%= image_tag post.user.get_profile_image(50, 50), class: "rounded-circle float-left mr-2" %>
        <div class="d-flex align-self-center"><%= post.user.name %></div>
      <% end %>
    </div>
  <% end %>
</div>
