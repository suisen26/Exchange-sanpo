<div class="container px-5 px-sm-0 py-4">
  <div class="row">

    <div class="col-md-3">
      <h2 class="text-center mb-3">プロフィール</h2>
      <%= render "public/users/profile", user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="text-center mb-3">投稿詳細</h2>
      <table class="table">

        <tr>
          <td>文章</td>
          <td><%= @post.text %></td>
        </tr>

        <tr>
          <td>投稿画像</td>
          <td><%= image_tag @post.get_post_image(200, 200) %></td>
        </tr>

        <tr>
          <% if @post.user == current_user %>
            <td><%= link_to "編集する", edit_post_path(@post), class: "btn btn-primary btn-block" %></td>
            <td><%= link_to "削除する", post_path(@post), method: :delete, class: "btn btn-danger btn-block" %></td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>
