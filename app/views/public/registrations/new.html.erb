<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tr class="form-group">
      <td><%= f.label :名前 %></td>
      <td><%= f.text_field :name, placeholder: "名前", autofocus: true, class: "form-control" %></td>
    </tr>

    <tr class="form-group">
      <td><%= f.label :紹介文 %></td>
      <td><%= f.text_area :introduction, placeholder: "紹介文", autofocus: true, class: "form-control" %></td>
    </tr>

    <tr class="form-group">
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
    </tr>

    <tr class="form-group">
      <td>
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %>
      </td>
      <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
    </tr>

    <tr class="form-group">
      <td><%= f.label :"パスワード(確認用)" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
    </tr>

    <tr class="actions">
      <td><%= f.submit "新規会員登録" %></td>
    </tr>
  </table>

<% end %>

<%= render "public/shared/links" %>
