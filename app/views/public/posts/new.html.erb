<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <h2 class="text-center mb-3">プロフィール</h2>
      <%= render "public/users/profile", user: current_user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2 class="text-center mb-3">新規投稿画面</h2>
      <%= form_with model: @post, url: posts_path(@posts), method: :post do |f| %>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :title, "タイトル", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :title, placeholder: "タイトル", autofocus: true, class: "form-control" %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :text, "本文", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :text, placeholder: "本文", autofocus: true, class: "form-control" %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :post_image, "投稿画像", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.file_field :post_image, accept: "image/*", class: "form-control-file" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-12 col-md-5 mx-auto py-3">
            <%= f.submit "投稿する", class: "btn btn-success btn-block" %>
          </div>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>
