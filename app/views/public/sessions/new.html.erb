<div class="container py-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">

      <h2 class="text-center mb-3">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :email, "メールアドレス", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
        </div>

         <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :password, "パスワード", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="offset-0 offset-md-4 col-12 col-md-8">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "m-0" %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-md-5 mx-auto py-3">
            <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
          </div>
        </div>
      <% end %>

      <div class="col-md-10 mt-5 mx-auto">
        <%= render "public/shared/links" %>
      </div>

    </div>
  </div>
</div>
