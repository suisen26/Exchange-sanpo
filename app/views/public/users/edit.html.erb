<div class="container py-4">
  <div class="row">

    <div class="col-12 col-lg-8 mx-auto">
      <h2 class="text-center mb-3">プロフィール編集</h2>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :name, "名前", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :introduction, "紹介文", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.text_area :introduction, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4 d-flex justify-content-center align-self-center">
              <%= f.label :profile_image, "プロフィール画像", class: "m-lg-0" %>
            </div>
            <div class="col-md-8">
              <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-md-5 mx-auto py-3">
            <%= f.submit "編集を保存する", class: "btn btn-success btn-block" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
