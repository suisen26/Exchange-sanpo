<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <h2>プロフィール</h2>
      <%= render "public/users/profile", user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>ユーザー一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "詳しく", user_path(user.id), class: "btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
